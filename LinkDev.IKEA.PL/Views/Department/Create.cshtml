@model CreateDepartmentViewModel
@{
    ViewData["Title"] = "Create Department";
}

<h1>Create New Deaprtment</h1>


<form asp-action="Create" asp-controller="Department">

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control"/>
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="CreationDate"></label>
        <input asp-for="CreationDate" type="date" class="form-control" />
        <span asp-validation-for="CreationDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a asp-action="Index" class="btn btn-light">Cancel</a>

    </div>



</form>

